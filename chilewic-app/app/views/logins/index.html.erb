







<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>

<p id="notice"><%= notice %></p>

<h1>Lista de asistencia</h1>

<table>
  <thead>
    <tr>
      <th>Mail</th>
      <th>Contraseña</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logins.each do |login| %>
      <tr>
        <td><%= login.mail %></td>
        <td><%= login.contrasena %></td>
        <td><%= link_to 'Ver datos', login %></td>
        <td><%= link_to 'Editar datos', edit_login_path(login) %></td>
        <td><%= link_to 'Eliminar', login, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear nueva asistencia', new_login_path %>
