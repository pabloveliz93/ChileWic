
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>

<p id="notice"><%= notice %></p>

<h1>Lista de asistencia</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Correo</th>
      <th>Teléfono</th>
      <th>Institución</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @asistencia.each do |asistencium| %>
      <tr>
        <td><%= asistencium.nombre %></td>
        <td><%= asistencium.apellido %></td>
        <td><%= asistencium.correo %></td>
        <td><%= asistencium.telefono %></td>
        <td><%= asistencium.institucion %></td>
        <td><%= link_to 'Ver datos', asistencium %></td>
        <td><%= link_to 'Editar datos', edit_asistencium_path(asistencium) %></td>
        <td><%= link_to 'Eliminar', asistencium, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear nueva asistencia', new_asistencium_path %>
